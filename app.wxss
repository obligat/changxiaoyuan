/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  background: #f5f5f5;
}

.h1 {
  font-size: 64rpx;
}

.h2 {
  font-size: 48rpx;
}

.h3 {
  font-size: 40rpx;
}

.h4 {
  font-size: 34rpx;
}

.h5 {
  font-size: 28rpx;
}

.h6 {
  font-size: 22rpx;
}

.main-font-color {
  color: #353535;
}

.sub-font-color {
  color: #95989a;
}

.hidden {
  visibility: hidden;
}

.icon-cancel {
  color: #aaa;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  font-weight: lighter;
}

.input-placeholder {
  color: #aaa;
}

.input-box {
  display: flex;
  border-bottom: 1px solid black;
  margin: 40rpx;
}

.error-massage {
  color: red;
  font-size: small;
  margin: -20rpx 40rpx 40rpx 40rpx;
}

.red-line {
  border-bottom: 1px solid red;
}
