
<!--index.wxml-->
<view class="container">
  <view class="wrapper">
    <view class="search-box">
      <input placeholder="搜索图书" placeholder-class="input-placeholder" value="{{searchInput}}" bindinput="handleKeyInput" />
      <view class="icon-cancel" style="opacity:{{searchInput?opacity:''}}" bindtap="clearSearchInput">X</view>
    </view>
  </view>
  <view class="btn-group">
    <button>无课教室</button>
    <button>西邮黄页</button>
    <button bindtap="handleBorrow">借阅查询</button>
  </view>
  <view class="class-table">
    <view class="no-class-table" wx:if="{{!username}}">
      <view class="h3 sub-font-color">课程表</view>
      <view class="smail-box">
      </view>
      <button class="btn-login" bindtap="handleLogin">
        立即登录
      </button>
      <view class="h4 sub-font-color">登录后才能查看课表哦^_^
      </view>
    </view>
    <block wx:else>
      <swiper>
        <block wx:for="{{courseMessage}}" wx:for-item="week" wx:for-index="day" wx:key="num">
          <swiper-item>
            <view class="swiper-item">
              <view class="table-head">
                <view>星期{{week[4].num}}</view>
              </view>
              <view class="table-body">
                <block wx:for="{{week}}" wx:key="">
                  <block wx:if="{{index < 4}}">
                    <view class="tr">
                      <view class="table-number h3 main-font-color">{{2*index+1}}-{{2*index+2}}</view>
                      <view class="item">
                        <view class="class-name h5 main-font-color">{{item.S_Name?item.S_Name:'无课'}}</view>
                        <view>
                          <text class="room-num h6 sub-font-color">{{item.RoomNum}} </text>
                          <text class="h6 sub-font-color">{{item.Teach_Name}}</text>
                        </view>
                      </view>
                    </view>
                  </block>
                </block>
              </view>
            </view>
          </swiper-item>
        </block>
      </swiper>
    </block>
  </view>
</view>