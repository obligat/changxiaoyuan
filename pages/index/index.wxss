/**index.wxss**/

.container {
  align-items: center;
  justify-content: flex-start;
}

.wrapper {
  background: #67d5ff;
  height: 100rpx;
  width: 100%;
}

.search-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #fff;
  background: #67d5ff;
  color: #fff;
  margin: 30rpx 20rpx 20rpx 20rpx;
  padding: 0 10rpx;
  font-size: 34rpx;
}

.input-placeholder {
  color: #fff;
  opacity: 0.8;
  font-size: 34rpx;
}

.icon-cancel {
  color: #fff;
  opacity: 0.8;
  font-size: 34rpx;
}

.btn-group, .class-table {
  width: 100%;
  display: flex;
  justify-content: center;
}

.btn-group button {
  background: #67d5ff;
  color: #fff;
  padding: 0 40rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 32rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
}

.btn-group {
  height: 90rpx;
}

.class-table {
  margin-top: 61rpx;
}

.no-class-table {
  background: #fff;
  display: flex;
  flex-direction: column;
  width: 600rpx;
  height: 800rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 16rpx rgba(87, 87, 87, 0.4);
  margin: 0 auto 20rpx;
}

.no-class-table {
  align-items: center;
}

.smail-box {
  border: 1px solid gray;
  width: 40%;
  height: 300rpx;
  margin-top: 100rpx;
}

.btn-login {
  font-size: 26rpx;
  border: 2rpx solid #67d5ff;
  color: #67d5ff;
  width: 200rpx;
  height: 60rpx;
  margin-top: 98rpx;
  margin-bottom: 16rpx;
  line-height: 60rpx;
  background: #fff;
  border-radius: 50rpx;
}

swiper {
  height: 820rpx;
  width: 100%;
  background: #f5f5f5;
}

.swiper-item {
  background: #fff;
  display: flex;
  flex-direction: column;
  width: 600rpx;
  height: 800rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 16rpx rgba(87, 87, 87, 0.4);
  margin: 0 auto;
}

.table-head {
  height: 200rpx;
  background: black;
  border-radius: 16rpx 16rpx 0 0;
  color: #fff;
  text-align: center;
  margin-bottom: 74rpx;
}

.table-body {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.tr {
  flex: 1;
  display: flex;
  align-items: flex-start;
  height: 110rpx;
}

.table-number {
  margin: -4rpx 48rpx 0 80rpx;
}

.item {
  flex: 1;
  flex-direction: column;
}

.room-num {
  width: 90rpx;
}

.class-name {
  text-overflow: ellipsis;
  width: 320rpx;
  overflow: hidden;
  white-space: nowrap;
}
