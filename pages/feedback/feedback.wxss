/* pages/feedback/feedback.wxss */

.textarea-box {
  width: 630rpx;
  min-height: 380rpx;
  max-height: auto;
  background: #fff;
  border: 1px solid beige;
  margin: 32rpx 30rpx 0 30rpx;
  box-shadow: 0 3rpx 6rpx rgba(87, 87, 87, 0.4);
  border-radius: 10rpx;
  padding: 32rpx 30rpx;
  line-height: 80rpx;
}

button {
  width: 90rpx;
  height: 90rpx;
  position: relative;
  margin-top: -50rpx;
  margin-left: 75%;
  border-radius: 50%;
  box-shadow: 0 3rpx 6rpx rgba(87, 87, 87, 0.4);
}

image {
  width: 90rpx;
  height: 90rpx;
  left: 0;
  position: absolute;
}

.grey-image {
  filter: grayscale(100%);
}

.wetoast__bd {
  width: 360rpx;
  height: 160rpx;
  bottom: 700rpx;
  background: rgba(255, 255, 255, 0.8);
  box-shadow: 0 3rpx 6rpx rgba(87, 87, 87, 0.4);
}

.wetoast__bd__title {
  margin: 3px 0;
  color: #353535;
  font-size: 36rpx;
}
